@{

    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Sorting";

    int a, b, c, d;
    Random rnd = new Random();
    a = rnd.Next(1, 5);
    b = rnd.Next(1, 5);
    while (a == b)
    {
        b = rnd.Next(1, 5);
    }
    c = rnd.Next(1, 5);
    while (c == a || c == b)
    {
        c = rnd.Next(1, 5);
    }
    d = rnd.Next(1, 5);
    while (d == a || d == b || d == c)
    {
        d = rnd.Next(1, 5);
    }

    int[] array = new int[4]
    {
        a, b, c, d
    };


}

<link href="~/Stylesheets/sorting.css" rel="stylesheet" type="text/css" />

@for (int i = 0; i<4; i++)
{
    switch (array[i])
    {
        case 1:
            <div class="box box@(i) vraag1_0">
                <div class="text">Hufflepuff</div>
            </div>
            break;
        case 2:
            <div class="box box@(i) vraag1_1">
                <div class="text">Ravenclaw</div>
            </div>
            break;
        case 3:
            <div class="box box@(i) vraag1_2">
                <div class="text">Gryffindor</div>
            </div>
            break;
        case 4:
            <div class="box box@(i) vraag1_3">
                <div class="text">Slytherin</div>
            </div>
            break;
    }
    <h1 class="txtvraag">
        Coole vraag is dit 1!
    </h1>
}
