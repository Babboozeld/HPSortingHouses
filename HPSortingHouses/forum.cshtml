@{

    if (Session["id"] == null)
    {
        Response.Redirect("~/SignInUp.cshtml");
    }

    int dashboardrequest = 0;   //0:   nog niet in huis     1:    result sorting     2:    default/...

    Layout = "~/_SiteLayout.cshtml";
    if (Session["house"] == null)
    {
        Page.Title = "Find your house";
        // dashboardrequest = 0;
    }
    else
    {
        if (Request.QueryString["dashboard"] == "result")
        {
            Page.Title = "Your house is...";
            dashboardrequest = 1;
        }
        else
        {
            dashboardrequest = 2;
        }
    }
    Page.Title = "Home Page";
}
@switch (dashboardrequest)
{
    case 0:     //nog niet in huis
        <div class="flag flag--middle">
            <div class="flag__container ">
                <div class="flag__top">
                    <h1>Your a mugle</h1>
                    <p>Do or finish de sorting test and find out in wich house you belong!</p>
                    <a href="~/Sorting.cshtml">Go</a>
                </div>
                <div class="flag__bottom--pointy"></div>
            </div>
        </div>
        break;
    case 1:     //result soring
        <div class="flag flag--middle">
            <div class="flag__container ">
                <div class="flag__top">
                    <h1>Your a @Session["house"]</h1>
                    <p>You can now enjoy all the features of the site </p>
                    <a href="~/forum.cshtml">Start</a>
                </div>
                <div class="flag__bottom--pointy"></div>
            </div>
        </div>
        break;
    case 2:
        <p>cool dat je nu lid bent als een @Session["house"]</p>
        break;
        <form>
            <div class="form-group">
                <label for="exampleFormControlInput1">Email address</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Example select</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>Harry Potter films</option>
                    <option>Harry Potter books</option>
                    <option>Lore</option>
                    <option>Off topic</option>
                    <option>Spam</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Example textarea</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
        </form>
            }
