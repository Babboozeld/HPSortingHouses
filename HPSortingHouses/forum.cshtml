@{

    if (Session["id"] == null)
    {
        Response.Redirect("~/SignInUp.cshtml");
    }

    int dashboardrequest = 0;   //0:   nog niet in huis     1:    result sorting     2:    default/...

    Layout = "~/_SiteLayout.cshtml";
    if (Session["house"] == null)
    {
        Page.Title = "Find your house";
        // dashboardrequest = 0;
    }
    else
    {
        if (Request.QueryString["dashboard"] == "result")
        {
            Page.Title = "Your house is...";
            dashboardrequest = 1;
        }
        else
        {
            dashboardrequest = 2;
        }
    }
    Page.Title = "Home Page";
}
@switch (dashboardrequest)
{
    case 0:     //nog niet in huis
        <div class="flag flag--middle">
            <div class="flag__container ">
                <div class="flag__top">
                    <h1>Your a muggle</h1>
                    <p id="blockquote">"It is our choices, @Session["username"], that show what we truly are, far more than our abilities."</p>
                    <p>Go and finish the sorting test and see in which house you belong!</p>
                    <a href="~/Sorting.cshtml">Go</a>
                </div>
                <div class="flag__bottom--pointy"></div>
            </div>
        </div>
        break;
    case 1:     //result soring
        <div class="flag flag--middle">
            <div class="flag__container ">
                <div class="flag__top">
                    <h1>Your a @Session["house"]</h1>
                    <p>You can now enjoy all the features of the site </p>
                    <a href="~/forum.cshtml">Start</a>
                </div>
                <div class="flag__bottom--pointy"></div>
            </div>
        </div>
        break;
    case 2:
        <h2>Welcome to @Session["house"]</h2>
        <p>Ye'r a wizard, @Session["username"]</p>
        break;
}
