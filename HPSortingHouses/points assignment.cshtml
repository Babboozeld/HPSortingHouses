@{
    Layout = "~/_SiteLayout.cshtml";

    int Ravenclaw = Convert.ToInt32(Request.Form["Ravenclaw"]);
    int Slytherin = Convert.ToInt32(Request.Form["Slytherin"]);
    int Gryffindor = Convert.ToInt32(Request.Form["Gryffindor"]);
    int Hufflepuff = Convert.ToInt32(Request.Form["Hufflepuff"]);

    int RA = 3;
    int SL = 2;
    int GR = 2;
    int HU = 4;

    RA = RA + Ravenclaw;
    SL =  SL + Slytherin;
    GR = GR + Gryffindor;
    HU = HU + Hufflepuff;

    Session["Ravenclaw"] = RA;
    Session["Slytherin"] = SL;
    Session["Gryffindor"] = GR;
    Session["Hufflepuff"] = HU;

}


