@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Become a wizard";
}
	<head>
		<title></title>
		<style>
			.flag-register.flag-container {
				--width: 60vw;
				--flag-width: 0.8;
				--gray-green: rgb(87,136,98);
			}
		</style>
		<link href="~/Stylesheets/Register.css" rel="stylesheet" type="text/css" />
	</head>
    <body>  
		<div id="flag1" class="flag-container flag-active flag-register" style="left: 40%;">
			<div class="flag-box">

				<a class="button-flag" style="display: none;">Join</a>
				<form class="loginform">
					<div>
						<label for="Email" class="col-sm-2 col-form-label">Email</label>
						<div class="col-sm-12">
							<input type="text" class="form-control" id="Email" placeholder="Email">
						</div>
					</div>

					<div>
						<label for="Username" class="col-sm-2 col-form-label">Username</label>
						<div class="col-sm-12">
							<input type="text" class="form-control" id="Username" placeholder="Username">
						</div>
					</div>
					<div>
						<label for="Password" class="col-sm-2 col-form-label">Password</label>
						<div class="col-sm-12">
							<input type="password" class="form-control" id="Password" placeholder="Password">

						</div>
						<div>
							<label for="Confirm-password" class="col-sm-2 col-form-label">Confirm Password</label>
							<div class="col-sm-12">
								<input type="text" class="form-control" id="Confirm-password" placeholder="Password">
							</div>
						</div>

						<div id="buttonlog">
							<button type="button" class="btn btn-secondary btn-lg">Register</button>
						</div>

					</div>
				</form>
			</div>
			<div class="flag-box-under">

			</div>
		</div>
	</body>
</html>
