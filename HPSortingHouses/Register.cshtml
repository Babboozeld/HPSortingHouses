@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Become a wizard";
    string connectionString = @"Data Source=(LocalDB)\MSSQLLocalDB;AttachDbFilename=|DataDirectory|\HarryPotter.mdf;Integrated Security=True";
    string provider = "System.Data.SqlClient";
    Database db = Database.OpenConnectionString(connectionString, provider);

    bool bericht1 = false;
    bool bericht2 = false;
    bool bericht3 = false;
    bool bericht4 = false;
    bool bericht5 = false;
    bool bericht6 = false;
    bool bericht7 = false;

    if (IsPost)
    {
        var email = Request.Form["email"];
        var username = Request.Form["username"];
        var password = Request.Form["password"];
        var password1 = Request.Form["password1"];

        if (email != "" && username != "" && password != "" && password1 != "")

        {
            string sel = "SELECT username FROM [user] WHERE username = @0";
            var result = db.Query(sel, username);
            if (result.Count() == 0 && email != "" && username != "" && password != "")
            {
                string ins = "INSERT INTO [user] (email, username, password) VALUES(@0,@1,@2)";
                db.Execute(ins, email, username, password);
                bericht3 = true;
            }
            else if (result.Count() > 0 && username != "" && password != "")
            {
                bericht4 = true;
            }
        }
        if (email != "" && username != "" && password == "" && password1 == "")
        {
            bericht1 = true;
        }
        if (email != "" && username == "" && password != "" && password1 != "")
        {
            bericht2 = true;
        }
        if (email == "" && username == "" && password == "" && password1 == "")
        {
            bericht5 = true;
        }
        if (email == "" && username != "" && password != "" && password1 != "")
        {
            bericht6 = true;
        }
        if (email != "" && username != "" && password != "" && password1 == "")
        {
            bericht7 = true;
        }

    }

    
}
<head>
    <link href="~/Stylesheets/Register.css" rel="stylesheet" type="text/css" />
</head>



<style>
  

    .flag-register.flag-container {
        --width: 60vw;
        --flag-width: 0.8;
        --gray-green: rgb(87,136,98);
    }
</style>

<div id="flag1" class="flag-container flag-active flag-register" style="left: 40%;">
    <div class="flag-box">

        <a class="button-flag" style="display: none;">Join</a>
        <form class="loginform" method="post">
            <div>
                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" id="Email" name="email" placeholder="Email" value="@Request.Form["email"]"/>
                </div>
            </div>

            <div>
                <label for="Username" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" id="Username" name="username" placeholder="Username" value="@Request.Form["username"]"/>
                </div>
            </div>
            <div>
                <label for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-12">
                    <input type="password" class="form-control" id="Password" name="password" placeholder="Password" value="@Request.Form["password"]"/>

                </div>
                <div>
                    <label for="Confirm-password" class="col-sm-2 col-form-label">Confirm Password</label>
                    <div class="col-sm-12">
                        <input type="password" class="form-control" id="Confirm-password" placeholder="Password" value="@Request.Form["password1"]"/>
                    </div>
                </div>
               @if (bericht1 == true)
               {
                   <h3>meerdere inloggegevens zijn incorrect ingevoerd</h3>
               }

               

                @if (bericht2 == true)
                {
                    <h3>Username form is empty</h3>
                }
                @if (bericht3 == true)
                {
                    <h4>Password is empty</h4>
                }
                @if (bericht4 == true)
                {
                    <h3>Username is empty</h3>
                }
                @if (bericht5 == true)
                {
                    <h3>All fields are empty!</h3>
                }
                @if (bericht6 == true)
                {
                    <h3>Email form is empty</h3>
                }
                @if (bericht7 == true)
                {
                    <h3>Confirm password form is empty</h3>
                }
                <div id="buttonlog">
                    <button name="registerbutton" type="submit" class="btn btn-secondary btn-lg">Register</button>
                </div>

            </div>
        </form>
    </div>
    <div class="flag-box-under">
    </div>
