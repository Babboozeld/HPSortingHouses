@{
    Layout = "~/_SiteLayout.cshtml";

    int Ravenclaw = 0;
    int Slytherin = 0;
    int Gryffindor = 0;
    int Hufflepuff = 0;

    if (IsPost)
    {
        Ravenclaw =+ Convert.ToInt32(Request.Form["Ravenclaw"]);
        Slytherin =+ Convert.ToInt32(Request.Form["Slytherin"]);
        Gryffindor =+ Convert.ToInt32(Request.Form["Gryffindor"]);
        Hufflepuff =+ Convert.ToInt32(Request.Form["Hufflepuff"]);
    }
    if (Session["Rw"] == null)
    {
        Session["Rw"] = 0;
        Session["Sn"] = 0;
        Session["Gr"] = 0;
        Session["Hf"] = 0;
    }

    /*
    int RA = 3;
    int SL = 2;
    int GR = 2;
    int HU = 4;

    RA = RA + Ravenclaw;
    SL =  SL + Slytherin;
    GR = GR + Gryffindor;
    HU = HU + Hufflepuff;
    */

    Session["Rw"] = Ravenclaw + Convert.ToInt32(Session["Rw"]);
    Session["Sn"] = Slytherin + Convert.ToInt32(Session["Sn"]);
    Session["Gr"] = Gryffindor + Convert.ToInt32(Session["Gr"]);
    Session["Hf"] = Hufflepuff + Convert.ToInt32(Session["Hf"]);

}


